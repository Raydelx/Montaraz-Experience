---
import Container from "../../components/container.astro";
import InformationProducts from "../../components/ui/informationProducts.astro";
import Icon from "../../components/Icon.astro";
import Layout from "../../layouts/Layout.astro";
import SliderReact from "../../hooks/SliderReact";
import Days from "@/components/products-components/days.astro";
import Includes from "@/components/products-components/includes.astro";
import Wheel from "@/components/ui/icons/wheel.astro";
import Route from "@/components/ui/icons/route.astro";
import Link from "@/components/ui/link.astro";
import Cancellation from "@/components/products-components/cancellation.astro";

// Duplica y cambia las rutas para aÃ±adir o modificar las fotos

const IMG = [
  {
    src: "/hiking-and-trekking/family-hike-gorge-of-sierra-nevada/fh-1.webp",
  },
  {
    src: "/hiking-and-trekking/family-hike-gorge-of-sierra-nevada/fh-2.webp",
  },
  {
    src: "/hiking-and-trekking/family-hike-gorge-of-sierra-nevada/fh-3.webp",
  },
  {
    src: "/hiking-and-trekking/family-hike-gorge-of-sierra-nevada/fh-4.webp",
  },
  {
    src: "/hiking-and-trekking/family-hike-gorge-of-sierra-nevada/fh-5.webp",
  },
  {
    src: "/hiking-and-trekking/family-hike-gorge-of-sierra-nevada/fh-6.jpg",
  },
];
const DAYS = [
  {
    day: "1",
    tecnicalInfo: true,
    description:
      "We drive to the village Monachil, located in a fertile valley of the Sierra Nevada Mountain Range at 800 meters above sea level, just outside Granada. The walking path, called Cahorros Trail, is a hiking path in the lower hills of Sierra Nevada National Park. The trail starts in the village following the river up toward the entrance of the narrow gorge. The way becomes a succession of stairs, crawling under overhanging rocks, and crossing hanging bridges along a cascading river through the canyon that creates rockpools and caves, making the walk an adventure for the whole family. At the end of the gorge, we return by a higher route, from which you get stunning views of the lush Monachil Valley. A great escape from the city and a perfect family day out in the mountains!",

    totalDistance: "9 km",
    totalAscent: "400 m",
    totalDescent: "400 m",
    duration: "3-4 hours",
  },
];
---

<Layout title="">
  <Container>
    <main class="mt-16">
      <!-- Foto, nombre y destino -->

      <div
        class="bg-center bg-no-repeat bg-[url('/public/hiking-and-trekking/family-hike-gorge-of-sierra-nevada/fh-principal.webp')] h-[25rem] rounded-2xl bg-cover">
        <div class="flex flex-col justify-end h-full p-6 w-auto bg-cover">
          <div class="flex gap-2 [text-shadow:_0_2px_4px_rgb(0_0_0_/_0.8)]">
            <Icon icon="destiny-logo" size="1.6rem" color="gray" />
            <p
              class="text-xl font-normal text-white lg:text-2xl flex flex-col justify-end h-full [text-shadow:_0_2px_4px_rgb(0_0_0_/_0.8)]">
              Monachil Sierra Nevada
            </p>
          </div>

          <h1
            class="text-3xl font-extrabold tracking-tight leading-none text-white md:text-4xl lg:text-5xl [text-shadow:_0_2px_4px_rgb(0_0_0_/_0.8)]">
            Family Hike - The Gorge of Sierra Nevada
          </h1>
        </div>
      </div>

      <!-- Informacion general de los viajes -->

      <div
        class="grid grid-cols-2 md:grid-cols-6 h-auto mt-3 gap-3 place-content-start md:px-6">
        <InformationProducts title="Price" subtitle="Private Tour">
          <div slot="icon">
            <Icon icon="price-logo" size="1.6rem" color="#0E46A3" />
          </div>
        </InformationProducts>
        <InformationProducts title="Pre-booking" subtitle="100%">
          <div slot="icon">
            <Icon icon="price-logo" size="1.6rem" color="#0E46A3" />
          </div>
        </InformationProducts>
        <InformationProducts title="Minimum of persons" subtitle="2">
          <div slot="icon">
            <Icon icon="group-logo" size="1.6rem" color="#0E46A3" />
          </div>
        </InformationProducts>
        <InformationProducts title="Duration" subtitle="4-5 Hours">
          <div slot="icon">
            <Icon icon="timer-logo" size="1.6rem" color="#0E46A3" />
          </div>
        </InformationProducts>
        <InformationProducts title="Tour type" subtitle="Guided">
          <div slot="icon">
            <Icon icon="guide-logo" size="1.6rem" color="#0E46A3" />
          </div>
        </InformationProducts>
        <InformationProducts title="Season" subtitle2="All Year">
          <!-- <div slot="icon">
            <Icon icon="autumn-logo" size="1.6rem" color="#0E46A3" />
          </div> -->
        </InformationProducts>
      </div>

      <!-- Informacion tecnica -->

      <div class="">
        <div
          class="grid grid-cols-2 justify-between md:grid-cols-6 h-auto mt-3 gap-3 md:px-6">
          <InformationProducts title="Total distance" subtitle="9 km">
            <div slot="icon">
              <Icon icon="distance-logo" size="1.6rem" color="#0E46A3" />
            </div>
          </InformationProducts>

          <InformationProducts title="Total ascent" subtitle="400 m">
            <div slot="icon">
              <Icon icon="up-logo" size="1.6rem" color="#0E46A3" />
            </div>
          </InformationProducts>
          <InformationProducts title="Total descent" subtitle="400 m">
            <div slot="icon">
              <Icon icon="down-logo" size="1.6rem" color="#0E46A3" />
            </div>
          </InformationProducts>
          <InformationProducts title="Route type" subtitle="Loop Trial">
            <div slot="icon">
              <Route />
            </div>
          </InformationProducts>
          <InformationProducts title="Difficulty">
            <div class="flex gap-1" slot="icon">
              <Icon icon="boot-logo" size="1.6rem" color="#0E46A3" />
            </div>
          </InformationProducts>
        </div>
      </div>

      <!--  Include, exclude, complementaries  -->
      <div
        class="grid md:grid-cols-2 lg:grid-cols-3 mt-20 md:mt-26 md:mb-36 gap-16 md:gap-4">
        <!-- Include -->
        <Includes title="Included">
          <ul slot="description" class="mt-4 flex flex-col gap-2">
            <li class="flex flex-wrap gap-2">
              <Icon icon="check-logo" size="1.6rem" color="#0E46A3" />
              <p class="max-w-[320px] text-md">Professional guide</p>
            </li>
            <li class="flex flex-wrap gap-2">
              <Icon icon="check-logo" size="1.6rem" color="#0E46A3" />
              <p class="max-w-[320px] text-md">
                Liability insurance and assistance
              </p>
            </li>
            <li class="flex flex-wrap gap-2">
              <Icon icon="check-logo" size="1.6rem" color="#0E46A3" />
              <p class="max-w-[320px] text-md">Transfer</p>
            </li>
            <li class="flex flex-wrap gap-2">
              <Icon icon="check-logo" size="1.6rem" color="#0E46A3" />
              <p class="max-w-[320px] text-md">Water</p>
            </li>
          </ul>
        </Includes>
        <!-- Exclude -->
        <Includes title="Not Included">
          <div slot="description" class="flex flex-col gap-2 mt-4">
            <li class="flex flex-wrap gap-2">
              <Icon icon="uncheck-logo" size="1.6rem" color="#0E46A3" />
              <p class="max-w-[320px] text-md">Lunch</p>
            </li>
          </div>
        </Includes>
        <!-- Complementaries -->
        <Includes title="Complementaries">
          <div slot="description" class="flex flex-col gap-2 mt-4"></div>
        </Includes>
      </div>
    </main>

    <div class="grid md:grid-cols-2 h-auto gap-10 md:gap-20 md:py-36 py-10">
      <div class="static h-[385px] hidden md:block">
        <img
          class="rounded-xl absolute md:w-[20rem] lg:w-[25rem] hover:z-40 transition-all duration-300 ease-out hover:scale-105"
          src="/hiking-and-trekking/family-hike-gorge-of-sierra-nevada/fh-3.webp"
          alt="ciclista mirando la sierra con cicicleta a su lado"
        />
        <img
          class="rounded-xl absolute md:w-[10rem] lg:w-[12rem] md:mt-48 lg:mt-60 ml-6 z-10 grayscale-[60%] hover:grayscale-0 transition-all duration-300 ease-out hover:scale-105"
          src="/hiking-and-trekking/family-hike-gorge-of-sierra-nevada/fh-4.webp"
          alt="ciclista mirando la sierra con cicicleta a su lado"
        />
        <img
          class="rounded-xl absolute md:w-[10rem] lg:w-[15em] ml-64 md:-mt-24 lg:-mt-32 grayscale-[60%] hover:grayscale-0 transition-all duration-300 ease-out hover:scale-105"
          src="/hiking-and-trekking/family-hike-gorge-of-sierra-nevada/fh-2.webp"
          alt="ciclista mirando la sierra con cicicleta a su lado"
        />
      </div>

      <div class="grid gap-5">
        <div class="">
          <h2
            class="max-w-2xl mb-4 md:px-0 font-bold text-4xl md:text-5xl xl:text-6xl">
            Availability
          </h2>

          <ul class="grid gap-2 text-lg">
            <li class="flex flex-wrap gap-2">
              <Icon icon="spring-logo" size="1.6rem" color="#0E46A3" />
              <p>Spring</p>
            </li>
            <li class="flex flex-wrap gap-2">
              <Icon icon="summer-logo" size="1.6rem" color="#0E46A3" />
              <p>Summer</p>
            </li>
            <li class="flex flex-wrap gap-2">
              <Icon icon="autumn-logo" size="1.6rem" color="#0E46A3" />
              <p>Autumn</p>
            </li>
            <li class="flex flex-wrap gap-2">
              <Icon icon="winter-logo" size="1.6rem" color="#0E46A3" />
              <p>Winter</p>
            </li>
          </ul>
        </div>

        <div class="">
          <h2
            class="max-w-2xl mb-4 md:px-0 font-bold text-4xl md:text-5xl xl:text-6xl">
            Highlight
          </h2>
          <p class="text-lg text-gray-900 mb-1">
            <span class="text-xl">ðŸ”¹</span> Sierra Nevada National Park
          </p>
          <p class="text-lg text-gray-900 mb-1">
            <span class="text-xl">ðŸ”¹</span> Suspension bridges
          </p>
          <p class="text-lg text-gray-900 mb-1">
            <span class="text-xl">ðŸ”¹</span> The Gorge
          </p>
          <p class="text-lg text-gray-900 mb-1">
            <span class="text-xl">ðŸ”¹</span> The river Monachil
          </p>
          <p class="text-lg text-gray-900 mb-1">
            <span class="text-xl">ðŸ”¹</span> Excellent views
          </p>
        </div>
      </div>
    </div>

    <!-- Button to download PDF -->
    <section class="grid md:grid-cols-2 gap-10">
      <div class="">
        <h2
          class="max-w-2xl mb-4 md:px-0 font-bold text-4xl md:text-5xl xl:text-6xl">
          Requirements
        </h2>
        <p class="text-lg text-gray-900 mb-1">
          <span class="text-xl strong">ðŸ”¹</span> Good physical health
        </p>
        <p class="text-lg text-gray-900">
          <span class="text-xl">ðŸ”¹</span> Minimum age: 8 years
        </p>
        <p class="text-lg text-gray-900">
          <span class="text-xl">ðŸ”¹</span> Closed shoes, no open shoes!
        </p>
      </div>
      <Cancellation />
    </section>
    <div
      class="grid bg-[#0E46A3] place-items-center md:mb-20 border-spacing-3 backdrop-blur-sm w-fit m-auto md:px-28 p-10 md:mt-40 mt-12 rounded-xl shadow-[0px_0px_23px_14px_#00000024]">
      <h2 class="text-2xl md:text-3xl font-bold text-center text-gray-200">
        More information about our tour
      </h2>
      <Link
        style="muted"
        href="/hiking-and-trekking/family-hike-gorge-of-sierra-nevada/TRIP NOTES FAMILY HIKE THE GORGE OF SIERRA NEVADA.pdf"
        download="Family Hike The Gorge of Sierra Nevada"
        class="flex gap-1 items-center justify-center mt-8 font-semibold"
        rel="noopener">
        View trip notes
      </Link>
    </div>

    <!-- Slider Photos -->
    <section class="m-auto md:w-full rounded-xl md:px-8 md:py-20">
      <ol class="relative mt-16">
        {(<SliderReact IMG={IMG} client:visible />)}
      </ol>
    </section>

    <!--  TimeLine per days  -->
    <h2 class="text-4xl md:text-5xl xl:text-6xl md:p-8 mt-16 font-bold mb-4">
      What to expect
    </h2>
    {
      DAYS.map((tour) => (
        <ol class="mb-10">
          <Days {...tour} />
        </ol>
      ))
    }
  </Container>
</Layout>
