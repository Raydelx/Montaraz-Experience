---
import Layout from "../layouts/Layout.astro";
import Container from "../components/container.astro";
import Sectionhead from "../components/sectionhead.astro";
import Card from "../components/card.astro";

const GRAVELKBIKE = [
  {
    name: "MTB Escape Granada",
    description: "Coming soon",
    href: "#",
    href_img: "/cycle-tour/montainbike/mtb-escape-granada/mtb-eg-product.webp",
    alt_img: "MTB Escape Granada",
  },
];
---

<Layout title="Gravel Bike / MTB Products">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Gravel Bike / MTB</Fragment>
      <Fragment slot="desc"> Only the best options for you. </Fragment>
    </Sectionhead>
    <main class="mt-32">
      <ul class="grid md:grid-cols-2 lg:grid-cols-3 gap-12 w-full">
        {
          GRAVELKBIKE.map((tour) => (
            <li class="mb-10">
              <Card {...tour} />
            </li>
          ))
        }
      </ul>
    </main>
  </Container>
</Layout>
