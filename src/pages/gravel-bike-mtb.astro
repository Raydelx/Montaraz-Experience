---
import Layout from "../layouts/Layout.astro";
import Container from "../components/container.astro";
import Sectionhead from "../components/sectionhead.astro";
import Card from "../components/card.astro";

const GRAVELKBIKE = [
  {
    name: "Sierra Nevada",
    description: "E-Bike Tour",
    href: "/gravel-bike/sierra-nevada/",
    href_img: "/cycle-tour/montainbike/sierra-nevada/sierranevada-1.png",
    alt_img: "Sierra nevada tour with e-bike",
  },
  {
    name: "Product 2",
    description: "aqui va la descripcion del producto numero 1",
    href: "road-bike-products/product-2/",
    href_img: "/road-bike.jpg",
    alt_img: "string",
  },
  {
    name: "Product 3",
    description: "aqui va la descripcion del producto numero 1",
    href: "road-bike-products/product-3/",
    href_img: "/road-bike.jpg",
    alt_img: "string",
  },
  {
    name: "Product 4",
    description: "aqui va la descripcion del producto numero 1",
    href: "road-bike-products/product-4/",
    href_img: "/road-bike.jpg",
    alt_img: "string",
  },
  {
    name: "Product 5",
    description: "aqui va la descripcion del producto numero 1",
    href: "road-bike-products/product-5/",
    href_img: "/road-bike.jpg",
    alt_img: "string",
    class: "bg-gradient-to-r from-blue-200 to-cyan-200",
  },
];
---

<Layout title="Gravel Bike / MTB Products">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Gravel Bike / MTB</Fragment>
      <Fragment slot="desc"> Only the best options for you. </Fragment>
    </Sectionhead>
    <main class="mt-32">
      <ul class="grid md:grid-cols-2 lg:grid-cols-3 gap-12 w-full">
        {
          GRAVELKBIKE.map((tour) => (
            <li class="mb-10">
              <Card {...tour} />
            </li>
          ))
        }
      </ul>
    </main>
  </Container>
</Layout>
