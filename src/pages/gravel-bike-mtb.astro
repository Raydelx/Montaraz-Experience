---
import Layout from "../layouts/Layout.astro";
import Container from "../components/container.astro";
import Sectionhead from "../components/sectionhead.astro";
import Card from "../components/card.astro";

const GRAVELKBIKE = [
  {
    name: "Sierra Nevada",
    description: "E-Bike Tour",
    href: "/gravel-bike/sierra-nevada/",
    href_img: "/cycle-tour/montainbike/sierra-nevada/sierranevada-1.webp",
    alt_img: "Sierra nevada tour with e-bike",
  },
];
---

<Layout title="Gravel Bike / MTB Products">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Gravel Bike / MTB</Fragment>
      <Fragment slot="desc"> Only the best options for you. </Fragment>
    </Sectionhead>
    <main class="mt-32">
      <ul class="grid md:grid-cols-2 lg:grid-cols-3 gap-12 w-full">
        {
          GRAVELKBIKE.map((tour) => (
            <li class="mb-10">
              <Card {...tour} />
            </li>
          ))
        }
      </ul>
    </main>
  </Container>
</Layout>
