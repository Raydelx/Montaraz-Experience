---
import NewFaq from "@/components/newFaq.astro";
import Container from "../components/container.astro";
import faqs from "../data_files/faqs.json";
import Layout from "../layouts/Layout.astro";
import SliderReactHome from "../hooks/SliderReactHome";
import CardHome from "@/components/cardHome.astro";
import Gallery from "@/components/gallery.astro";
import Hero from "@/components/hero.astro";

const IMG = [
  {
    src: "/home/home1.webp",
  },
  {
    src: "/home/home2.webp",
  },
  {
    src: "/home/home3.webp",
  },
  {
    src: "/home/home4.webp",
  },
  {
    src: "/home/home5.webp",
  },
  {
    src: "/home/home6.webp",
  },
  {
    src: "/home/home7.webp",
  },
];
---

<Layout title="">
  <section class="m-auto md:w-full">
    <ol class="relative">
      {(<SliderReactHome IMG={IMG} client:visible />)}
    </ol>
  </section>
  <Container class="w-full">
    <section class="grid md:grid-cols-2 mb-10 md:mb-28">
      <Hero />
    </section>

    <section>
      <CardHome />
    </section>

    <section class="mt-10 w-auto flex justify-center">
      <NewFaq title="Frequently<br />asked questions" faqs={faqs} />
    </section>

    <Gallery />
  </Container>
</Layout>
