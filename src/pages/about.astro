---
import Layout from "../layouts/Layout.astro";
import Container from "../components/container.astro";
import Sectionhead from "../components/sectionhead.astro";
import AboutHero from "../components/aboutHero.astro";
import AboutHeroIzq from "../components/aboutHeroIzq.astro";
import Team from "../components/team.astro";
---

<Layout title="About">
  <Container>
    <Sectionhead class="mb-6">
      <Fragment slot="title">About</Fragment>
      <Fragment slot="desc"></Fragment>
    </Sectionhead>
    <div
      class="bg-no-repeat bg-cover bg-[url('/tailor-made.jpg/')] h-[16rem] md:h-[22rem] mt-6 rounded-xl">
    </div>
    <div class="grid place-items-center md:mb-24 mb-12 mt-12">
      <h2
        class="max-w-2xl text-3xl font-bold e tracking-tight leading-none md:text-4xl xl:text-5xl">
        Montaraz Experience
      </h2>
      <h2
        class="max-w-2xl mb-4 text-3xl t font-bold tracking-tight leading-none md:text-4xl xl:text-15xl">
        Outdoors & Culture
      </h2>
      <p
        class="max-w-2xl font-medium t md:text-lg lg:text-xl text-center text-gray-500">
        Montaraz Experience, based in Granada, southern Spain, is an Adventure
        Travel Company specializing in Outdoor & Culture active holidays. We
        create journeys that immerse you in a country's culture for the ultimate
        local experience. Explore landscapes, traditions, cuisine, local people,
        and history.
      </p>
    </div>
  </Container>

  <Container>
    <AboutHero title="The Great Outdoors" subtitle="Take time to travel">
      <img
        class="rounded-xl object-cover"
        slot="picture"
        src="/about1.jpg"
        alt=""
      />
    </AboutHero>

    <AboutHeroIzq
      title="New Experiences"
      subtitle="Explore our true outdoor travel experiences suitable for anyone who enjoys an active way of traveling">
      <img
        class="rounded-xl object-cover"
        slot="picture"
        src="/tailor-made2.jpg"
        alt=""
      />
    </AboutHeroIzq>

    <AboutHero
      title="Small Group Travel"
      subtitle="Allows people to feel Freedom to go at their own pace and get to know their travel companies">
      <img
        sizes="h-6"
        class="rounded-xl object-cover"
        slot="picture"
        src="/e-bike.jpg"
        alt=""
      />
    </AboutHero>

    <AboutHeroIzq
      title="Professional Guide"
      subtitle="With years of expertise and local knowledge">
      <img class="rounded-xl" slot="picture" src="/tailor-made2.jpg" alt="" />
    </AboutHeroIzq>

    <AboutHero
      title="Sustainable Travel"
      subtitle="Being more conscious of how we trave, we seek to minimize negative impacts on the environment and aim to have a positive social impact on local communities and economies.">
      <img class="rounded-xl" slot="picture" src="/tailor-made2.jpg" alt="" />
    </AboutHero>

