import SliderReact from "../../hooks/SliderReact";
import Days from "@/components/products-components/days.astro";
import Wheel from "@/components/ui/icons/wheel.astro";
import Route from "@/components/ui/icons/route.astro";
import CalendarPic from "@/components/products-components/calendarPic.astro";
import Highlight from "@/components/products-components/highlight.astro";
import AvalibleDate from "@/components/products-components/avalibleDate.astro";
import Link from "@/components/ui/link.astro";

