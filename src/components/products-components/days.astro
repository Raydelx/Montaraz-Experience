---
import Icon from "../Icon.astro";

interface Props {
  day: string;
  description: string;
  description2?: string;
  description3?: string;
  description4?: string;
  description5?: string;
  description6?: string;
  totalDistance?: string;
  totalAscent?: string;
  totalDescent?: string;
  duration?: string;
  optional1?: string;
  optional2?: string;
  tecnicalInfo?: boolean;
}
const {
  day,
  description,
  description2,
  description3,
  description4,
  description5,
  description6,
  totalDistance,
  totalAscent,
  totalDescent,
  duration,
  optional1,
  optional2,
  tecnicalInfo,
} = Astro.props;
---

{
  tecnicalInfo === true ? (
    <div class="grid md:grid-cols-6 md:p-8 md:gap-10 gap-5">
      <div class="col-span-3">
        <div>
          <h2 class="md:text-3xl text-2xl font-bold mb-2">Day {day}</h2>
        </div>
        <p class="text-gray-500 text-md">{description}</p>
        {description2 && (
          <p class="text-gray-500 text-md mt-2">{description2}</p>
        )}
        {description3 && (
          <p class="text-gray-500 text-md mt-2">{description3}</p>
        )}
        {description4 && (
          <p class="text-gray-500 text-md mt-2">{description4}</p>
        )}
        {description5 && (
          <p class="text-gray-500 text-md mt-2">{description5}</p>
        )}
        {description6 && (
          <p class="text-gray-500 text-md mt-2">{description6}</p>
        )}
        {optional1 && (
          <p class="text-gray-500 text-md">
            <span class="font-bold">Optional: </span>
            {optional1}
          </p>
        )}
        {optional2 && (
          <p class="text-gray-500 text-md">
            <span class="font-bold">Optional: </span>
            {optional2}
          </p>
        )}
      </div>
      {totalAscent && (
        <div class="md:col-span-3 grid gap-4 place-items-end">
          <div class="grid grid-cols-6 gap-14 md:gap-2">
            <div class="col-span-1">
              <Icon icon="distance-logo" size="3rem" color="#0E46A3" />
            </div>
            <div class="grid col-span-5">
              <h2 class="text-pretty text-neutral-900 text-xl font-bold">
                Total Distance
              </h2>
              <p class="text-pretty text-gray-500 text-md">{totalDistance}</p>
            </div>
          </div>
          <div class="grid grid-cols-6 gap-14 md:gap-2">
            <div class="col-span-1">
              <Icon icon="up-logo" size="3rem" color="#0E46A3" />
            </div>
            <div class="grid col-span-5">
              <h2 class="text-pretty text-neutral-900 text-xl font-bold">
                Total Ascent
              </h2>
              <p class="text-pretty text-gray-500 text-md">{totalAscent}</p>
            </div>
          </div>
          <div class="grid grid-cols-6 gap-14 md:gap-2">
            <div class="col-span-1">
              <Icon icon="down-logo" size="3rem" color="#0E46A3" />
            </div>
            <div class="grid col-span-5">
              <h2 class="text-pretty text-neutral-900 text-xl font-bold">
                Total Descent
              </h2>
              <p class="text-pretty text-gray-500 text-md">{totalDescent}</p>
            </div>
          </div>
          <div class="grid grid-cols-6 gap-14 md:gap-2">
            <div class="col-span-1">
              <Icon icon="timer-logo" size="3rem" color="#0E46A3" />
            </div>
            <div class="grid col-span-5">
              <h2 class="text-pretty text-neutral-900 text-xl font-bold">
                Duration Trial
              </h2>
              <p class="text-pretty text-gray-500 text-md">{duration}</p>
            </div>
          </div>
        </div>
      )}
    </div>
  ) : (
    <div class="grid md:grid-cols-2 md:p-8 md:gap-10 gap-5">
      <div class="col-span-3">
        <div>
          <h2 class="md:text-3xl text-2xl font-bold mb-2">Day {day}</h2>
        </div>
        <p class="text-gray-500 text-md">{description}</p>
        {description2 && (
          <p class="text-gray-500 text-md mt-2">{description2}</p>
        )}
        {description3 && (
          <p class="text-gray-500 text-md mt-2">{description3}</p>
        )}
        {description4 && (
          <p class="text-gray-500 text-md mt-2">{description4}</p>
        )}
        {description5 && (
          <p class="text-gray-500 text-md mt-2">{description5}</p>
        )}
        {description6 && (
          <p class="text-gray-500 text-md mt-2">{description6}</p>
        )}
        {optional1 && (
          <p class="text-gray-500 text-md">
            <span class="font-bold">Optional: </span>
            {optional1}
          </p>
        )}
        {optional2 && (
          <p class="text-gray-500 text-md">
            <span class="font-bold">Optional: </span>
            {optional2}
          </p>
        )}
      </div>
    </div>
  )
}
