---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<div class="grid max-w-screen-xl mx-auto gap-14 mt-6 lg:grid-cols-12">
  <div
    id="theater"
    class="hidden lg:col-span-7 lg:flex max-h-96 place-content-start">
    <slot name="picture" />
  </div>
  <div class="mr-auto lg:col-span-5 md:text-right" id="theater-text">
    <h2
      class="max-w-2xl mb-4 md:px-0 font-bold tracking-tight leading-none text-start text-4xl md:text-5xl xl:text-6xl">
      {title}
    </h2>
    <slot name="description" />
  </div>
</div>

