---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<div class="grid max-w-screen-xl mx-auto gap-14 mt-6 lg:grid-cols-12">
  <div class="mr-auto lg:col-span-4 md:text-right">
    <h2
      class="max-w-2xl mb-4 text-4xl font-bold tracking-tight leading-none md:text-5xl xl:text-6xl">
      {title}
    </h2>
    <slot name="date" />
  </div>
  <div class="hidden lg:col-span-8 lg:flex max-h-96 place-content-end">
    <slot name="picture" />
  </div>
</div>
